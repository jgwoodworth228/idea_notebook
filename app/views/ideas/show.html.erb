<h1><%= @idea.desc %></h1>
<%= link_to 'Edit', edit_idea_path(@idea.id)  %> |
<%= link_to 'Destroy', idea_path(@idea.id), :method => :delete  %> |
<%= link_to 'Back to index', ideas_path  %>

<h2>Comments</h2>
<ul>
  <% @comments.each do |comment| %>
    <li><%= link_to comment.contents, comment_path(comment.id) %></li>
  <% end %>
</ul>
